@page "/login"
@inject IFirebase Firebase
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Login - FireBlazor Sample</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Sign In</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @_errorMessage
                        </div>
                    }

                    @if (_currentUser is not null)
                    {
                        <div class="alert alert-success">
                            <p><strong>Welcome, @(_currentUser.DisplayName ?? _currentUser.Email)!</strong></p>
                            <p class="mb-0">UID: @_currentUser.Uid</p>
                        </div>
                        <button class="btn btn-outline-danger w-100" @onclick="SignOut">
                            Sign Out
                        </button>
                    }
                    else
                    {
                        <EditForm Model="_loginModel" OnValidSubmit="HandleLogin">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label for="email" class="form-label">Email address</label>
                                <InputText id="email" class="form-control" @bind-Value="_loginModel.Email" placeholder="you@example.com" />
                                <ValidationMessage For="() => _loginModel.Email" />
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <InputText id="password" type="password" class="form-control" @bind-Value="_loginModel.Password" placeholder="Your password" />
                                <ValidationMessage For="() => _loginModel.Password" />
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@_isLoading">
                                    @if (_isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    }
                                    Sign In
                                </button>
                            </div>
                        </EditForm>

                        <hr />

                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-secondary" @onclick="CreateAccount" disabled="@_isLoading">
                                Create Account
                            </button>
                            <button class="btn btn-outline-danger" @onclick="SignInWithGoogle" disabled="@_isLoading">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
                                </svg>
                                Sign in with Google
                            </button>
                            <button class="btn btn-outline-dark" @onclick="SignInWithGitHub" disabled="@_isLoading">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-github me-2" viewBox="0 0 16 16">
                                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                                </svg>
                                Sign in with GitHub
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    private LoginModel _loginModel = new();
    private FirebaseUser? _currentUser;
    private string? _errorMessage;
    private bool _isLoading;

    protected override async Task OnInitializedAsync()
    {
        await Firebase.InitializeAsync();
        _currentUser = Firebase.Auth.CurrentUser;
        Firebase.Auth.OnAuthStateChanged += HandleAuthStateChanged;
    }

    private void HandleAuthStateChanged(FirebaseUser? user)
    {
        _currentUser = user;
        InvokeAsync(StateHasChanged);
    }

    private void RedirectAfterLogin()
    {
        var returnUrl = string.IsNullOrEmpty(ReturnUrl) ? "/" : Uri.UnescapeDataString(ReturnUrl);
        Navigation.NavigateTo(returnUrl);
    }

    private async Task HandleLogin()
    {
        _isLoading = true;
        _errorMessage = null;

        var result = await Firebase.Auth.SignInWithEmailAsync(_loginModel.Email, _loginModel.Password);

        if (result.IsSuccess)
        {
            _currentUser = result.Value;
            RedirectAfterLogin();
        }
        else
        {
            _errorMessage = result.Error?.Message;
        }

        _isLoading = false;
    }

    private async Task CreateAccount()
    {
        _isLoading = true;
        _errorMessage = null;

        var result = await Firebase.Auth.CreateUserWithEmailAsync(_loginModel.Email, _loginModel.Password);

        if (result.IsSuccess)
        {
            _currentUser = result.Value;
            RedirectAfterLogin();
        }
        else
        {
            _errorMessage = result.Error?.Message;
        }

        _isLoading = false;
    }

    private async Task SignInWithGoogle()
    {
        _isLoading = true;
        _errorMessage = null;

        var result = await Firebase.Auth.SignInWithGoogleAsync();

        if (result.IsSuccess)
        {
            _currentUser = result.Value;
            RedirectAfterLogin();
        }
        else
        {
            _errorMessage = result.Error?.Message;
        }

        _isLoading = false;
    }

    private async Task SignInWithGitHub()
    {
        _isLoading = true;
        _errorMessage = null;

        var result = await Firebase.Auth.SignInWithGitHubAsync();

        if (result.IsSuccess)
        {
            _currentUser = result.Value;
            RedirectAfterLogin();
        }
        else
        {
            _errorMessage = result.Error?.Message;
        }

        _isLoading = false;
    }

    private async Task SignOut()
    {
        _isLoading = true;
        await Firebase.Auth.SignOutAsync();
        _currentUser = null;
        _isLoading = false;
    }

    public void Dispose()
    {
        Firebase.Auth.OnAuthStateChanged -= HandleAuthStateChanged;
    }

    public class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }
}
